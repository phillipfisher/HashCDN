@model IndexViewModel;
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<form enctype="multipart/form-data" method="post">
    <dl>
        <dt>
            <label asp-for="Data">Upload a file to test!</label>
        </dt>
        <dd>
            <input asp-for="Data" type="file">
            <span asp-validation-for="Data"></span>
        </dd>
    </dl>
    <input asp-page-handler="Upload" class="btn btn-primary" type="submit" value="Upload" />
</form>

@if (Model.UploadMessage != null)
{
    <p>Upload Message: @Model.UploadMessage</p>
}

@if (Model.UploadName != null)
{
    <p>Upload Link: <a href="@Model.UploadUri" target="_blank">@Model.UploadName</a></p>
}
